{
  "manifest_version": 3,
  "name": "MineGlance - Mining Profit Dashboard",
  "version": "1.0.2",
  "description": "Are you actually making money mining? Find out in 2 clicks. Net profit dashboard for hobbyist GPU miners.",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://*.2miners.com/*",
    "https://*.nanopool.org/*",
    "https://*.f2pool.com/*",
    "https://api.ethermine.org/*",
    "https://hiveon.net/*",
    "https://*.herominers.com/*",
    "https://api.woolypooly.com/*",
    "https://woolypooly.com/*",
    "https://api.coingecko.com/*",
    "https://whattomine.com/*",
    "https://mineglance.com/*",
    "https://firo.cedric-crispin.com/*",
    "https://*.ckpool.org/*",
    "https://public-pool.io/*",
    "https://*.ocean.xyz/*",
    "https://api.ocean.xyz/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "MineGlance"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
