{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for MineGlance desktop app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "notification:default",
    "store:default",
    "autostart:default",
    "updater:default",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-app-write",
    "fs:allow-temp-write",
    "fs:allow-app-local-data-write",
    "fs:allow-app-local-data-read",
    "process:default",
    "process:allow-exit",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://www.mineglance.com/**" },
        { "url": "https://mineglance.com/**" }
      ]
    }
  ]
}
